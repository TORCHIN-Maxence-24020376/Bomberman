<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="rootPane" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bomberman.controller.MainMenuController">

    <!-- Contenu du menu -->
    <VBox alignment="CENTER" spacing="20" styleClass="main-menu">
        <padding>
            <Insets bottom="30" left="50" right="50" top="20" />
        </padding>

        <!-- Titre du jeu -->
        <Label text="BOMBERMAN" styleClass="main-title">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Label>

        <Region VBox.vgrow="ALWAYS" />

        <!-- Boutons du menu en texte plat -->
        <Button fx:id="playButton" text="JOUER" styleClass="menu-button">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Button>

        <Button fx:id="vsBotButton" text="VS BOT" styleClass="menu-button">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Button>

        <Button fx:id="levelEditorButton" text="ÉDITEUR" styleClass="menu-button">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Button>

        <Button fx:id="settingsButton" text="PARAMÈTRES" styleClass="menu-button">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Button>

        <Button fx:id="quitButton" text="QUITTER" styleClass="menu-button">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Button>
    </VBox>
</StackPane>
