<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.bomberman.controller.ProfilesController"
            styleClass="profiles-view">

    <!-- En-tête -->
    <top>
        <VBox alignment="CENTER" styleClass="header">
            <padding>
                <Insets top="15" bottom="15" left="20" right="20" />
            </padding>

            <Label text="Gestion des Profils Joueurs" styleClass="view-title">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
        </VBox>
    </top>

    <!-- Centre avec liste scrollable des profils -->
    <center>
        <VBox spacing="15" styleClass="main-content">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Profils disponibles" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Nouveau Profil" onAction="#newProfile" styleClass="primary-button">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button text="Personnaliser les contrôles" onAction="#showControlsDialogForSelected" styleClass="info-button">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button text="Recharger" onAction="#reloadProfiles" styleClass="info-button" />
            </HBox>

            <Separator />

            <!-- Liste scrollable des profils -->
            <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" styleClass="profiles-scroll">
                <VBox fx:id="profilesListContainer" spacing="10" styleClass="profiles-list">
                    <!-- Les profils seront ajoutés ici dynamiquement -->
                </VBox>
            </ScrollPane>
            
            <!-- Formulaire pour ajouter/modifier un profil -->
            <VBox spacing="15" styleClass="form-panel">
                <padding>
                    <Insets top="15" bottom="15" left="15" right="15" />
                </padding>
                
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label fx:id="formTitleLabel" text="Ajouter un nouveau profil" styleClass="section-title">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS" />
                </HBox>

                <Separator />

                <!-- Formulaire -->
                <GridPane hgap="15" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" />
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints />
                    </columnConstraints>

                    <Label text="Prénom *" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                    <TextField fx:id="firstNameField" promptText="Entrez le prénom"
                               styleClass="form-field" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2" />

                    <Label text="Nom *" styleClass="field-label" GridPane.rowIndex="1" GridPane.columnIndex="0">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                    <TextField fx:id="lastNameField" promptText="Entrez le nom"
                               styleClass="form-field" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2" />

                    <Label text="Avatar" styleClass="field-label" GridPane.rowIndex="2" GridPane.columnIndex="0">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                    <TextField fx:id="avatarField" promptText="Chemin de l'avatar"
                               styleClass="form-field" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    <Button fx:id="browseAvatarButton" text="Parcourir" onAction="#browseAvatar"
                            styleClass="browse-button" GridPane.rowIndex="2" GridPane.columnIndex="2" />

                    <Label text="Thème" styleClass="field-label" GridPane.rowIndex="3" GridPane.columnIndex="0">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="themeCombo" prefWidth="200" styleClass="form-combo" 
                              GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.columnSpan="2" />
                </GridPane>

                <HBox alignment="CENTER" spacing="15" styleClass="form-actions">
                    <padding>
                        <Insets top="15" />
                    </padding>
                    <Button fx:id="addButton" text="Ajouter Profil" onAction="#addProfile"
                            styleClass="primary-button" prefWidth="150">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>
                    <Button fx:id="cancelButton" text="Annuler" onAction="#cancelEdit"
                            styleClass="secondary-button" prefWidth="150" />
                </HBox>

                <Label text="Note: Les champs marqués d'un * sont obligatoires"
                       styleClass="help-text" wrapText="true">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Label>
            </VBox>

            <!-- Bouton fermer -->
            <HBox alignment="CENTER_RIGHT">
                <Button fx:id="closeButton" text="Fermer" onAction="#closeWindow"
                        styleClass="secondary-button" prefWidth="150">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>