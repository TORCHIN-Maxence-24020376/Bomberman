<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            styleClass="game-container"
            fx:controller="com.example.bomberman.controller.CTFGameController">

    <top>
        <HBox alignment="CENTER" spacing="20" styleClass="header">
            <padding>
                <Insets top="10" bottom="10" left="20" right="20" />
            </padding>
            
            <!-- Informations Joueur 1 -->
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Label fx:id="player1InfoLabel" text="Joueur 1" styleClass="player-info" />
                <Label fx:id="ctfPlayer1ScoreLabel" text="Score: 0" styleClass="score-info" />
            </VBox>
            
            <!-- Statut du jeu -->
            <VBox alignment="CENTER">
                <Label fx:id="gameStatusLabel" text="CAPTURE THE FLAG" styleClass="game-status" />
                <Label fx:id="timerLabel" text="Temps: 0:00" styleClass="timer" />
            </VBox>
            
            <!-- Informations Joueur 2 -->
            <VBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <Label fx:id="player2InfoLabel" text="Joueur 2" styleClass="player-info" />
                <Label fx:id="ctfPlayer2ScoreLabel" text="Score: 0" styleClass="score-info" />
            </VBox>
        </HBox>
    </top>
    
    <center>
        <Canvas fx:id="gameCanvas" width="600" height="520" />
    </center>

</BorderPane> 